<!--                        android:layout_height="33dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:scaleType="fitXY"-->
<!--                        android:src="@drawable/fav_2" />-->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear91"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"

                android:orientation="horizontal"
                >

                <SeekBar
                    android:id="@+id/mSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_gravity="center"
                    style="@style/AppSeekBar"
                    android:progressBackgroundTint="@android:color/white"
                    android:thumbTint="@android:color/white"
                />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear116"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear125"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:text="00:00"
                        android:textColor="#ECEFF1"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/textview10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="right|bottom"
                        android:paddingRight="8dp"
                        android:text="00:00"
                        android:textColor="#ECEFF1"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear117"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="26dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal"
                    >

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/repeatSong"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="left|center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/repeat_song"
                        android:visibility="gone"
                        />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/equalizer"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="left|center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/equalizer" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear133"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/previousSong"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/previous_song" />

                    <ImageView
                        android:id="@+id/playPauseSong"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/play" />

                    <ImageView
                        android:id="@+id/nextSong"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/next_song" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear132"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/shuffleSong"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right|center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/repeat"
                        android:visibility="gone"

                        />

                    <ImageView
                        android:id="@+id/addtoFavorites"
                        android:layout_width="35dp"
