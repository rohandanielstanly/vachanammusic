                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageview33"
                        android:layout_width="40dp"
                        android:layout_height="37dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/play" />
                </com.google.android.material.circularreveal.CircularRevealLinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.circularreveal.CircularRevealLinearLayout
                android:id="@+id/narrowline2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#212121"
                android:orientation="horizontal" />

            <com.google.android.material.circularreveal.CircularRevealLinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/t_bg"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp">

                <com.google.android.material.circularreveal.CircularRevealLinearLayout
                    android:id="@+id/linear105"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageview30"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/home_1" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textview14"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/home"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </com.google.android.material.circularreveal.CircularRevealLinearLayout>

                <com.google.android.material.circularreveal.CircularRevealLinearLayout
                    android:id="@+id/linear103"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageview29"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/search_light" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textview13"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/search"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </com.google.android.material.circularreveal.CircularRevealLinearLayout>

                <com.google.android.material.circularreveal.CircularRevealLinearLayout
                    android:id="@+id/linear8"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageview31"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/playlits"
                        android:scaleType="fitXY" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/playlist"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </com.google.android.material.circularreveal.CircularRevealLinearLayout>

                <com.google.android.material.circularreveal.CircularRevealLinearLayout
                    android:id="@+id/linear104"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageview1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/fav_white" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textview15"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="@string/favorites"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </com.google.android.material.circularreveal.CircularRevealLinearLayout>
            </com.google.android.material.circularreveal.CircularRevealLinearLayout>
        </com.google.android.material.circularreveal.CircularRevealLinearLayout>
    </com.google.android.material.circularreveal.CircularRevealFrameLayout>

